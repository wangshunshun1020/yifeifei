



<view class="container_2">




<view class="navlist" style="padding-top:30rpx;">

    <view class="lists">

<view class="item {{status == -1 ? 'bred' : 'nobred'}}" bindtap="toEdu" data-id='-1'>全部({{totalcount}})</view>

<view class="item  {{status == 1 ? 'bred' : 'nobred'}}" bindtap="toEdu" data-id='1'>已支付({{totalcount_0}})</view>
<view class="item  {{status == 2 ? 'bred' : 'nobred'}}" bindtap="toEdu" data-id='2'>未支付({{totalcount_1}})</view>


</view>

</view>














<!-- 列表 -->
<view class="news" wx:if="{{guestlist.length > 0}}">

   

    <view class="guestlist" wx:for="{{guestlist}}">

        <view class="username"><view>订单号:{{item.order_no}}</view></view>

        <view class="usertel"><view class="cu-capsule radius">
    <view class="cu-tag bg-blue ">
        订单类型
    </view>
    <view class="cu-tag line-blue">
      购买置顶信息
    </view>
  </view></view>

  <view class="usertel"><view class="cu-capsule radius">
    <view class="cu-tag bg-blue ">
        订单状态
    </view>
    <view class="cu-tag line-blue">
        {{item.status_str}}
    </view>
  </view></view>
    

        <view class="usertel">支付金额:￥{{item.money}}</view>
     
        <view class="useraddress"><view>变更时间:{{item.create_time}}</view></view>


 






        <view class="newslist"  >
                        <view class="pic" bindtap="toCarsDetail" data-id="{{item.carid}}">
                            <image src="{{item.thumb!='' ? item.thumb : '../../imgs/icon/noimg.png'}}"></image>
                        </view>
                        <view class="title" bindtap="toCarsDetail" data-id="{{item.carid}}">
                                  <view class="address">
                                        <view>{{item.title}}</view>
                                  </view>
                                <view class="housearea">{{item.provincename}}-{{item.cityname}} | {{item.carkm}}万公里</view>
                                <view class="perprice">
                                    <view>
                                 {{item.money}} <text style="font-size:.7rem;">万</text>
                                </view>
                          
                                </view>

                               

                             


                        </view>
                        
 </view>








        <view class="useroper"> 
        
        
            <view wx:if="{{item.status == 1 }}" bindtap="toPay2" data-id="{{item.id}}">立即支付</view><view wx:if="{{item.status ==2 }}" data-id="{{item.id}}">
        已支付</view>        
        </view>
    </view>







              </view>



              <view class="nodata" wx:if="{{guestlist.length == 0}}">
    <image   src="../../imgs/icon/nodata.png"></image>
</view>



</view>



<!-- 加载更多 -->
<view class="loadmore">
	<text>{{loadMore}}</text>
</view>














