/* pages/selectbrand/index.wxss */.current {
	width: 92%;
	line-height: 28px;
	padding: 0 4%;
	background-color: #f5f5f5;
	font-size: 14px;
}    



scroll-view {
  height: 600px;
    float: left;
  width: 94%;
}

  
.city_type {
	display: flex;
	flex-direction: column;
	padding: 5px 2%;	
}
.brandlist_new{
  display: flex;
  flex-direction: row;
	margin-bottom: 30rpx;
	justify-content: flex-start;
	width:600rpx;
}
 .img image{
  width:80rpx;
  height: 80rpx;
}
.brandname{
  margin-left: 20rpx;
  font-size: .8rem;
  height: 80rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}
.city_tag {
	width: 28%;
	line-height: 30px;
	border-radius: 2px;
	font-size: 14px;
	text-align: center;
	margin: 4px 2%;
}

.active {
	border: 1px solid #e62129;
	color: #e62129;
}
/* 侧栏字母 */
.aside_letter {
	position: fixed;
	top: 8px;
	right: 0;
	z-index: 66;
}

.aside_letter text {
	display: block;
	width: 30px;
	font-size: 12px;
	line-height: 20px;
	color: #e62129;
	text-align: center;
}


.navlist{
	width:750rpx;
	display: flex;
	justify-content:space-around;
	flex-direction: row;
	padding-top:20rpx;
	flex-wrap: wrap;
	background: #FFF;
 
 }
 
 .navlist .item{
		 width:180rpx;
		 display: flex;
		 flex-direction: column;
		 align-items: center;
		 font-size: .7rem;
		 padding-bottom: 30rpx;
 
 }
 .navlist .item image{
	 width:60rpx;
	 height: 60rpx;
 
 }



.carslist{
	width:750rpx;
	display: flex;
	justify-content:space-around;
	flex-direction: row;
	padding-top:20rpx;
	flex-wrap: wrap;
	background: #FFF;
 
 }
 
 .carslist .item{
		 width:220rpx;
		 display: flex;
		 flex-direction: column;
		 align-items: center;
		 font-size: .7rem;
		 padding-bottom: 30rpx;
 
 }
 .carslist .item image{
	 width:180rpx;
	 height: 120rpx;
 
 }