page{

  background:#f5f5f5;
}
.container {
  background-color: #f5f5f5;
  min-height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.navlist{
  width:750rpx;
  display: flex;
  justify-content:space-around;
  flex-direction: row;
  padding-top:20rpx;
  flex-wrap: wrap;
  background: #FFF;
  height: 240rpx;
  align-items: center;
 
 }
 
 .navlist .item{
     width:230rpx;
     display: flex;
     flex-direction: column;
     align-items: center;
     font-size: .7rem;
     padding-bottom: 30rpx;
 
 }
 .navlist .item image{
   width:60rpx;
   height: 60rpx;
 
 }

 .list{

  width: 750rpx;
  display: flex;
  flex-direction:column;
 }

 .list .list_item{

  display: flex;
  flex-direction: row;
  background:#fff;
  margin-top:10rpx;
  padding:20rpx;

 }



 .list_content{
   display: flex;
   flex-direction: column;
 }

 .list_content view:nth-child(1){

  font-weight: 500;
  font-size: 12px;
 }

 .list_content view:nth-child(2){
  font-size: 12px;
  color:#A2A2A2;
 }
 
 .nodata{

  width:750rpx;
  display: flex;
  align-items: center;
  justify-content: center;

  margin-top: 300rpx;

}
.nodata image{

  width:150rpx;
  height: 150rpx;
}